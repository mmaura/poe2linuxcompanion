{
  "typescript.tsdk": "node_modules/typescript/lib",
  "typescript.tsc.autoDetect": "off",
  "json.schemas": [
    {
      "fileMatch": ["/*electron-builder.json5", "/*electron-builder.json"],
      "url": "https://json.schemastore.org/electron-builder"
    }
  ],
  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  // N'empêche pas '.' d'ouvrir les suggestions, mais évite qu'il valide une suggestion
  "editor.acceptSuggestionOnCommitCharacter": false,

  // N'accepte les suggestions que quand tu appuies sur Enter
  "editor.acceptSuggestionOnEnter": "on",

  // Facultatif : empêche Tab de valider les suggestions
  "editor.tabCompletion": "off"
}
